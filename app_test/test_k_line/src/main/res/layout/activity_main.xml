<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.test_k_line.KLineView
        android:id="@+id/kline"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:linePaddingTopRate="0.1"
        app:linePaddingBottomRate="0.1"
        app:linePaddingLeftRate="0.1"
        app:linePaddingRightRate="0.1"
        android:background="#e9e9e9"/>


    <com.example.test_k_line.KLineView
        android:layout_marginTop="20dp"
        android:id="@+id/kline2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:linePaddingTop="3dp"
        app:linePaddingBottom="3dp"/>

    <com.example.test_k_line.DoubleKLineView
        android:id="@+id/klineDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

</LinearLayout>