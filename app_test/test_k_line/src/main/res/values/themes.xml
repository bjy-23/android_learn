<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_learn" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>
    
    
    <declare-styleable name="KLineView">
        <attr name="lineColor" format="color"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="shadowEnable" format="boolean"/>
        <attr name="shadowColorStart" format="color"/>
        <attr name="shadowColorEnd" format="color"/>
        <attr name="shadowAlpha" format="float"/>
        <attr name="linePaddingTop" format="dimension"/>
        <attr name="linePaddingBottom" format="dimension"/>
        <attr name="linePaddingTopRate" format="float"/>
        <attr name="linePaddingBottomRate" format="float"/>
    </declare-styleable>
</resources>