<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_learn" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>
    
    
    <declare-styleable name="KLineView">
        <attr name="linePaddingTop" format="dimension"/>
        <attr name="linePaddingBottom" format="dimension"/>
        <attr name="linePaddingTopRate" format="float"/>
        <attr name="linePaddingBottomRate" format="float"/>
        <attr name="linePaddingLeft" format="dimension"/>
        <attr name="linePaddingRight" format="dimension"/>
        <attr name="linePaddingLeftRate" format="float"/>
        <attr name="linePaddingRightRate" format="float"/>
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color"/>
    </declare-styleable>
</resources>