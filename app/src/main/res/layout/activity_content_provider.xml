<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contentprovider.ContentProviderActivity">

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="insert: "
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="query: "
        app:layout_constraintTop_toBottomOf="@+id/btn_insert"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="bbsjhd"
        app:layout_constraintLeft_toRightOf="@id/btn_query"
        app:layout_constraintTop_toTopOf="@id/btn_query"
        app:layout_constraintBottom_toBottomOf="@id/btn_query"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete: "
        app:layout_constraintTop_toBottomOf="@+id/btn_query"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>